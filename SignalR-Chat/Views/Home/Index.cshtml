@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex justify-content-between align-items-center custom-navbar">
    <div class="site-header">SignalR-Chat</div>
    <div class="userName d-flex flex-column">
        <div id="userNameText"></div>
        <div id="userIdText"></div>
    </div>
</div>
<div class="chat-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3 id="connectionMsg">Connecting...</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="text" id="chatBox" placeholder="Type something.." />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12" id="messageBox">

            </div>
        </div>
    </div>
</div>

@Html.Partial("_UserAuthModal")

@section Scripts {
    <script type="text/javascript">
        var AuthURLs = {
            GetClientId: '@Url.Action("GetClientId", "Home")'
        }
    </script>
    <script src="~/js/chat.js" asp-append-version="true" type="text/javascript"></script>
}
